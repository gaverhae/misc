#!/usr/bin/env bash

set -euo pipefail
DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )/.." &> /dev/null && pwd)"
cd "$DIR"

DAY=$(printf "%02d" $1)

cat <<EOF > src/t/day$DAY.clj
(ns t.day$DAY
  (:require [clojure.core.match :refer [match]]
            [clojure.string :as string]
            [t.lib :as lib :refer [->long]]))

(defn parse
  [lines]
  lines)

(defn part1
  [input]
  input)

(defn part2
  [input]
  input)

(lib/check
  [part1 sample] 0
  #_#_[part1 puzzle] 0
  #_#_[part2 sample] 0
  #_#_[part2 puzzle] 0)
EOF

touch data/sample/day$DAY
echo "git add . && git commit -m 'aoc/2024/$DAY: prep"
echo "vim -O src/t/day$DAY.clj data/sample/day$DAY"
