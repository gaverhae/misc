#!/usr/bin/env bash

set -euo pipefail
DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd)"
cd "$DIR/.."

if [ -z "${1:-}" ]; then
  echo "Need an arg: start, stop, reload"
fi

_go() (
  nginx -p "$(pwd)" -e logs/error.log $@
)

case $1 in
  start)
    echo "Probable address:"
    echo "http://$(ifconfig | grep "inet 192" | awk '{print $2}'):8080"
    echo "Starting server..."
    _go
    ;;
  stop)
    _go -s stop
    ;;
  reload)
    _go -s reload
    ;;
  *)
    echo "ERROR"
    exit 1
    ;;
esac

