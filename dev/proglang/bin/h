#!/usr/bin/env bash

set -euo pipefail
DIR="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd)/.."
cd "$DIR"

log=$(mktemp)
trap "echo 'Something went wrong. Logs of last step:'; cat $log" EXIT

_help() (
  echo "Available commands:"
  echo "  h test        Watches src and test directories, and runs \`clj -X:test\`"
  echo "                on each change."
  echo "  h repl        Starts a Cider REPL."
  echo "  h shell       Starts a proglang shell."
)

_test() (
  watchexec -w src -w test -c -- clj -A:test -M test/*
)

_repl() (
  clj -M:repl
)

_shell() (
  clj -M -m main
)

case $1 in
  repl|test|shell)
    _$1
    ;;
  *)
    _help
    trap - EXIT
    exit 1
    ;;
esac

trap - EXIT
